<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextFields">
        <!-- Customize your theme here. -->
        <item name="errorColor">@color/colorError</item>
        <item name="panelBackgroundColor">@color/colorTFBackground</item>
        <item name="primaryColor">@color/colorAccent</item>
        <item name="helperTextColor">@color/colorText</item>
        <item name="secondaryColor">@color/colorSecondaryTF</item>
    </style>

    <style name="EditTexts">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProgressBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
